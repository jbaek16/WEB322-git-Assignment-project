<div id="form">
    <div id="regit_form">
        <form method="POST" id="form" name='userinfos' action="/regit">
            <fieldset><br>
                <legend><b>CREATE ACCOUNT</b></legend>
                <div id="social-networks">
                    <a href="https://www.facebook.com/" class="social_logo"><img src="../img/facebook.PNG"
                            alt="facebook"></a>
                    <a href="https://www.google.com/" class="social_logo"><img src="../img/google.PNG"
                            alt="google.PNG"></a>
                    <a href="https://twitter.com/" class="social_logo"><img src="../img/twiter.PNG"
                            alt="twiter.PNG"></a>
                    <a href="https://www.linkedin.com/" class="social_logo"><img src="../img/linkedIn.PNG"
                            alt="linkedIn.PNG"></a>
                </div>
                <hr>
                <span class="input"><label for="fname">First Name: </label><br>
                    <input type="text" id="firstName" name="firstName" title="First Name"
                        placeholder="Please enter your first name" value="{{dataForm.firstName}}">
                    <span style=" color: red;">
                       
                        <div class="errMessage">{{fnError}}</div>
                    
                    </span>
                </span><br>

                <span class="input"><label for="lname">Last Name: </label><br>
                    <input type="text" id="lastName" name="lastName" title="Last Name"
                        placeholder="Please enter your last name" value="{{dataForm.lastName}}">
                    <span style=" color: red;">
                        
                        <div class="errMessage">{{lnError}}</div>
                        
                    </span>
                </span><br>

                <span class="input"><label for="email">Email: </label><br>
                    <input type="email" id="email" name="email" title="Email address"
                        placeholder="Please enter your email address" value="{{dataForm.email}}">
                    <span style=" color: red;">
                       
                        <div class="errMessage">{{emailError}}</div>
                    </span>
                </span>
                <br>

                <span class="input"><label for="password">Password:</label><br>
                    <input type="password" id="password" name="password" title="Password"
                        placeholder="Please enter your password" value="{{dataForm.password}}">
                    <span style=" color: red;">
                     
                        <div class="errMessage">{{pwError}}</div>
                       
                    </span>
                </span><br>

                <br><br>
                <button type="submit" name="submit" value="Submit">Register</button>
                <br><br>
        </form>
    </div>
</div>